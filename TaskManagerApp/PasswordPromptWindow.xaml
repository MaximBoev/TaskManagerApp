        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите пароль" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <PasswordBox x:Name="PasswordBox" Margin="0,10"/>
        <Button Content="Подтвердить" Click="Confirm_Click"/>
    </StackPanel>
</Window>