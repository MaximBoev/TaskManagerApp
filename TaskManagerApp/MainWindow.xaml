<Window x:Class="TaskManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TreeView x:Name="TaskTree"
          ItemsSource="{Binding}"
          SelectedItemChanged="TaskTree_SelectedItemChanged"
          Margin="10"
          Height="300">
            <TreeView.Resources>
                <!-- Преобразователь статуса в цвет -->
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                </Style>
                <Style x:Key="StatusBorderStyle" TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="ToDo">
                            <Setter Property="Background" Value="#FFFDE9" />
                            <Setter Property="BorderBrush" Value="Goldenrod" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="InProgress">
                            <Setter Property="Background" Value="#E6F7FF" />
                            <Setter Property="BorderBrush" Value="SteelBlue" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="Completed">
                            <Setter Property="Background" Value="#E8FBE8" />
                            <Setter Property="BorderBrush" Value="Green" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TreeView.Resources>

            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Subtasks}">
                    <Border Style="{StaticResource StatusBorderStyle}"
                    Padding="5" Margin="3" BorderThickness="1" CornerRadius="5">
                        <DockPanel>
                            <!-- Левая часть: Название + Время -->
                            <StackPanel Orientation="Vertical" DockPanel.Dock="Left" Width="400">
                                <TextBlock Text="{Binding Name}"
                                   FontWeight="Bold"
                                   FontSize="13"
                                   TextTrimming="CharacterEllipsis"
                                   Foreground="#333"/>
                                <TextBlock FontSize="11" Foreground="Gray">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} | {1:t} - {2:t}">
                                            <Binding Path="Status" />
                                            <Binding Path="StartTime" />
                                            <Binding Path="EndTime" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>

                            <!-- Правая часть: Кнопки -->
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                                <Button Content="✏" Width="25" Height="25" Margin="3"
                                ToolTip="Изменить"
                                Click="EditTask_Click"/>
                                <Button Content="🗑" Width="25" Height="25" Margin="3"
                                ToolTip="Удалить"
                                Click="DeleteTask_Click"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- Основные действия -->
        <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="10">
            <Button Content="🆕 Добавить задачу" Width="160" Margin="5" Click="AddTask_Click"/>
            <Button Content="➕ Добавить подзадачу" Width="160" Margin="5" Click="AddSubtask_Click"/>
            <Button Content="✏ Изменить время" Width="160" Margin="5" Click="EditTask_Click"/>
            <Button Content="⏪ Отменить изменения" Width="160" Margin="5" Click="UndoTask_Click"/>
        </StackPanel>

        <!-- Шаблоны и статистика -->
        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="10">
            <Button Content="📋 Сохранить в шаблоны" Width="160" Margin="5" Click="SaveAsPrototype_Click"/>
            <Button Content="📥 Добавить из шаблонов" Width="160" Margin="5" Click="AddFromPrototype_Click"/>
            <Button Content="📊 Статистика" Width="160" Margin="5" Click="ShowStats_Click"/>
        </StackPanel>
    </Grid>
</Window>
